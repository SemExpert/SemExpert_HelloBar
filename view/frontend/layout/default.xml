<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="header.container">
            <!-- Hello Bar -->
            <container name="hello-bar-container" htmlTag="div" htmlClass="hello-bar" before="-" >
                <block class="SemExpert\HelloBar\Block\CMS" name="hello-bar">
                    <arguments>
                        <argument name="block_id" xsi:type="string">hello-bar</argument>
                    </arguments>
                </block>
            </container>
        </referenceContainer>
    </body>
</page>
